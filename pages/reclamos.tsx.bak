import Head from 'next/head';
import { useState } from 'react';

type FormState = 'idle' | 'sending' | 'ok' | 'error';

export default function Reclamos() {
  const [state, setState] = useState<FormState>('idle');
  const [msg, setMsg] = useState<string>('');

  // üëâ Reemplaza por tu endpoint de Formspree (o EmailJS / Make):
  const FORMSPREE_URL = 'https://formspree.io/f/xxxxxxxx'; // <-- c√°mbialo

  const onSubmit = async (e: React.FormEvent<HTMLFormElement>) => {
    e.preventDefault();
    setState('sending');
    setMsg('');

    const form = e.currentTarget;
    const data = new FormData(form);

    try {
      const res = await fetch(FORMSPREE_URL, {
        method: 'POST',
        body: data,
        headers: { Accept: 'application/json' },
      });

      if (res.ok) {
        setState('ok');
        setMsg('Tu reclamo/queja fue enviado correctamente. Te escribiremos al correo indicado.');
        form.reset();
      } else {
        setState('error');
        setMsg('No pudimos enviar tu solicitud. Intenta nuevamente o escr√≠benos por WhatsApp.');
      }
    } catch {
      setState('error');
      setMsg('Ocurri√≥ un error de conexi√≥n. Intenta nuevamente.');
    }
  };

  return (
    <>
      <Head>
        <title>Libro de Reclamaciones ‚Äî PapoomArt</title>
        <meta name="robots" content="noindex" />
      </Head>

      <main className="container py-10">
        <h1 className="text-3xl font-bold">Libro de Reclamaciones</h1>
        <p className="mt-2 text-gray-600">
          Conforme a la Ley N.¬∫ 29571 (C√≥digo de Protecci√≥n y Defensa del Consumidor) ponemos a tu
          disposici√≥n este formulario para ingresar un <strong>reclamo</strong> o una <strong>queja</strong>.
        </p>

        <form onSubmit={onSubmit} className="mt-8 grid md:grid-cols-2 gap-6 card p-6">
          {/* --- Tipo --- */}
          <div className="md:col-span-2">
            <label className="block text-sm font-medium">Tipo de solicitud</label>
            <div className="mt-2 flex gap-6">
              <label className="flex items-center gap-2">
                <input type="radio" name="tipo" value="Reclamo" required className="accent-pink-500" />
                <span>Reclamo (disconformidad sobre producto/servicio)</span>
              </label>
              <label className="flex items-center gap-2">
                <input type="radio" name="tipo" value="Queja" className="accent-pink-500" />
                <span>Queja (malestar sobre atenci√≥n)</span>
              </label>
            </div>
          </div>

          {/* --- Datos del consumidor --- */}
          <div>
            <label className="block text-sm font-medium">Nombres y apellidos</label>
            <input name="nombre" required className="input" placeholder="Tu nombre" />
          </div>
          <div>
            <label className="block text-sm font-medium">Documento de identidad</label>
            <input name="documento" required className="input" placeholder="DNI / CE" />
          </div>
          <div>
            <label className="block text-sm font-medium">Correo electr√≥nico</label>
            <input type="email" name="email" required className="input" placeholder="tucorreo@mail.com" />
          </div>
          <div>
            <label className="block text-sm font-medium">Tel√©fono</label>
            <input name="telefono" className="input" placeholder="+51 9xx xxx xxx" />
          </div>
          <div className="md:col-span-2">
            <label className="block text-sm font-medium">Direcci√≥n</label>
            <input name="direccion" className="input" placeholder="Calle, n√∫mero, distrito, provincia" />
          </div>

          {/* --- Datos de la compra/servicio --- */}
          <div>
            <label className="block text-sm font-medium">Fecha de compra/servicio</label>
            <input type="date" name="fecha" className="input" />
          </div>
          <div>
            <label className="block text-sm font-medium">Monto reclamado (S/)</label>
            <input type="number" step="0.01" name="monto" className="input" placeholder="0.00" />
          </div>
          <div className="md:col-span-2">
            <label className="block text-sm font-medium">Producto/servicio</label>
            <input name="producto" className="input" placeholder="Ej. Stickers resistentes al agua" />
          </div>

          {/* --- Detalle --- */}
          <div className="md:col-span-2">
            <label className="block text-sm font-medium">Detalle del reclamo/queja</label>
            <textarea name="detalle" required className="input min-h-[120px]" placeholder="Describe lo ocurrido" />
          </div>
          <div className="md:col-span-2">
            <label className="block text-sm font-medium">Pedido del consumidor</label>
            <textarea name="pedido" required className="input min-h-[100px]" placeholder="¬øQu√© soluci√≥n solicitas?" />
          </div>

          {/* honeypot anti-bots */}
          <input type="text" name="_gotcha" className="hidden" tabIndex={-1} autoComplete="off" />

          {/* metadatos */}
          <input type="hidden" name="_subject" value="Nuevo registro ‚Äî Libro de Reclamaciones" />
          <input type="hidden" name="origen" value="PapoomArt ‚Äî Web" />

          <div className="md:col-span-2 flex items-start gap-3 text-sm text-gray-600">
            <input type="checkbox" required className="mt-1 accent-pink-500" />
            <span>
              Declaro ser el titular del reclamo/queja y que la informaci√≥n consignada es veraz. Autorizo el
              uso de mis datos para gestionar mi solicitud.
            </span>
          </div>

          <div className="md:col-span-2">
            <button
              type="submit"
              disabled={state === 'sending'}
              className="btn btn-primary disabled:opacity-60"
            >
              {state === 'sending' ? 'Enviando‚Ä¶' : 'Enviar reclamo/queja'}
            </button>

            {msg && (
              <p className={`mt-3 text-sm ${state === 'ok' ? 'text-green-600' : 'text-red-600'}`}>
                {msg}
              </p>
            )}
          </div>

          {/* Nota legal visible */}
          <div className="md:col-span-2 text-xs text-gray-500">
            <p>
              * El proveedor dar√° respuesta en un plazo no mayor a 15 d√≠as h√°biles, pudiendo extenderse
              excepcionalmente conforme a normativa aplicable.
            </p>
          </div>
        </form>
      </main>

      <style jsx global>{`
        .input {
          @apply w-full rounded-md border border-gray-300 px-3 py-2 outline-none focus:ring-2 focus:ring-pink-400;
        }
        .card {
          @apply rounded-xl border border-gray-200 bg-white shadow-sm;
        }
        .btn {
          @apply inline-flex items-center justify-center rounded-md px-4 py-2 font-semibold;
        }
        .btn-primary {
          @apply bg-pink-600 text-white hover:opacity-90 transition;
        }
      `}</style>
    </>
  );
}
	